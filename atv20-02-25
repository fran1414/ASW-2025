<body>

    <h1>Crie seu Animal Interativo</h1>

    <div class="container">
        <!-- Step 1: Escolher animal -->
        <div id="step1" class="step active">
            <h2>Escolha um Animal</h2>
            <select id="animalSelect" onchange="mostrarImagemAnimal()">
                <option value="Cachorro">Cachorro</option>
                <option value="Gato">Gato</option>
                <option value="Passaro">Pássaro</option>
                <option value="Peixe">Peixe</option>
                <option value="Cavalo">Cavalo</option>
            </select>
            <br>
            <img id="animalImage" class="animal-img" src="" alt="Imagem do animal" style="display:none;">
            <br>
            <button onclick="nextStep()">Próximo</button>
        </div>

        <!-- Step 2: Definir Nome e Cor -->
        <div id="step2" class="step">
            <h2>Personalize seu Animal</h2>
            <input type="text" id="animalNome" placeholder="Digite um nome">
            <input type="color" id="animalCor">
            <br>
            <button onclick="nextStep()">Criar Animal</button>
        </div>

        <!-- Step 3: Interação -->
        <div id="step3" class="step">
            <h2>Seu Animal</h2>
            <div class="animal-info">
                <p class="animal-display" id="animalDisplay"></p>
                <button onclick="fazerSom()">Ouvir Som</button>
                <button onclick="mover()">Ver Movimento</button>
            </div>
        </div>
    </div>

    <script>
        class Animal {
            constructor(nome, cor) {
                this._nome = nome;
                this._cor = cor;
            }

            get nome() {
                return this._nome;
            }

            get cor() {
                return this._cor;
            }

            fazerSom() {
                return "Este animal faz um som!";
            }

            mover() {
                return "O animal está se movendo!";
            }
        }

        class Cachorro extends Animal {
            fazerSom() {
                let audio = new Audio('/cachorro.m4a');
                audio.play();
                return `${this.nome} late: Au Au!`;
            }

            mover() {
                return `${this.nome} está correndo! 🐾`;
            }
        }

        class Gato extends Animal {
            fazerSom() {
                let audio = new Audio('/gato.m4a');
                audio.play();
                return `${this.nome} mia: Miau!`;
            }

            mover() {
                return `${this.nome} está saltando! 🐱`;
            }
        }

        class Passaro extends Animal {
            fazerSom() {
                let audio = new Audio('/pássaros.m4a');
                audio.play();
                return `${this.nome} canta: Piu Piu!`;
            }

            mover() {
                return `${this.nome} está voando! 🕊️`;
            }
        }

        class Peixe extends Animal {
            fazerSom() {
                return `${this.nome} não faz som! 🤫`;
            }

            mover() {
                return `${this.nome} está nadando! 🐟`;
            }
        }

        class Cavalo extends Animal {
            fazerSom() {
                let audio = new Audio('/cavalo.m4a');
                audio.play();
                return `${this.nome} relincha: Hiiiiin!`;
            }

            mover() {
                return `${this.nome} está galopando! 🐎`;
            }
        }

        let currentStep = 1;
        let animalEscolhido;

        function nextStep() {
            document.getElementById(`step${currentStep}`).classList.remove("active");
            currentStep++;
            document.getElementById(`step${currentStep}`).classList.add("active");

            if (currentStep === 3) {
                criarAnimal();
            }
        }

        function criarAnimal() {
            let nome = document.getElementById("animalNome").value;
            let cor = document.getElementById("animalCor").value;
            let tipo = document.getElementById("animalSelect").value;

            switch (tipo) {
                case "Cachorro":
                    animalEscolhido = new Cachorro(nome, cor);
                    break;
                case "Gato":
                    animalEscolhido = new Gato(nome, cor);
                    break;
                case "Passaro":
                    animalEscolhido = new Passaro(nome, cor);
                    break;
                case "Peixe":
                    animalEscolhido = new Peixe(nome, cor);
                    break;
                case "Cavalo":
                    animalEscolhido = new Cavalo(nome, cor);
                    break;
            }

            document.getElementById("animalDisplay").innerHTML = 
                `<span style="color:${cor}">${animalEscolhido.nome}</span> (${tipo}) foi criado!`;
        }

        function fazerSom() {
            alert(animalEscolhido.fazerSom());
        }

        function mover() {
            alert(animalEscolhido.mover());
        }

        function mostrarImagemAnimal() {
            const animal = document.getElementById("animalSelect").value;
            const image = document.getElementById("animalImage");

            switch (animal) {
                case "Cachorro":
                    image.src = "https://www.example.com/cachorro.jpg"; // Substitua com a URL da imagem real
                    break;
                case "Gato":
                    image.src = "https://www.example.com/gato.jpg"; // Substitua com a URL da imagem real
                    break;
                case "Passaro":
                    image.src = "https://www.example.com/passaro.jpg"; // Substitua com a URL da imagem real
                    break;
                case "Peixe":
                    image.src = "https://www.example.com/peixe.jpg"; // Substitua com a URL da imagem real
                    break;
                case "Cavalo":
                    image.src = "https://www.example.com/cavalo.jpg"; // Substitua com a URL da imagem real
                    break;
            }

            image.style.display = 'block';
        }
    </script>

</body>
